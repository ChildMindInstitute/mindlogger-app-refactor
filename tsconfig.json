// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json",     /* Recommended React Native TSConfig base */
  "compilerOptions": {
    "baseUrl": ".",
    "paths" : {
      "@app/*": ["src/*"],
      "@assets/*": ["assets/*"],
      "@shared/*": ["src/shared/*"],
      "@images": ["assets/images/index"],
      "@features/*": ["src/features/*"],
      "@screens/*": ["src/screens/*"],
      "@entities/*": ["src/entities/*"],
      "*": ["*","*.ios","*.android"]
    },
     "skipLibCheck": true
  }
}
