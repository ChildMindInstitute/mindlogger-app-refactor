// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json", /* Recommended React Native TSConfig base */
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "ESNext",
      "dom"
    ],
    "paths" : {
      "@app/*": ["src/*"],
      "@assets/*": ["assets/*"],
      "@shared/*": ["src/shared/*"],
      "@images": ["assets/images/index"],
      "@features/*": ["src/features/*"], 
      "@screens": ["src/screens/index"],
      "@screens/*": ["src/screens/*"],
      "@entities/*": ["src/entities/*"],
      "@jobs/*": ["src/jobs/*"],
      "@widgets/*": ["src/widgets/*"],
      "*": ["*","*.ios","*.android"]
    },
     "skipLibCheck": true
  },
  "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
