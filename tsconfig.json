{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "ESNext",
      "dom"
    ],
    "paths" : {
      "@app/*": ["src/*"],
      "@assets/*": ["assets/*"],
      "@shared/*": ["src/shared/*"],
      "@images": ["assets/images/index"],
      "@features/*": ["src/features/*"], 
      "@screens": ["src/screens/index"],
      "@screens/*": ["src/screens/*"],
      "@entities/*": ["src/entities/*"],
      "@jobs/*": ["src/jobs/*"],
      "@widgets/*": ["src/widgets/*"],
      "*": ["*","*.ios","*.android"]
    }
  }
}
